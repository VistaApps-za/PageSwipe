rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // User profile images - only owner can write (legacy path)
    match /users/{userId}/profile/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024  // Max 5MB
                   && request.resource.contentType.matches('image/.*');
    }

    // Profile photos - only owner can write
    match /profile_photos/{fileName} {
      // Extract userId from filename (format: {userId}.jpg)
      allow read: if true;
      allow write: if request.auth != null
                   && fileName.matches(request.auth.uid + '.*')
                   && request.resource.size < 5 * 1024 * 1024  // Max 5MB
                   && request.resource.contentType.matches('image/.*');
    }

    // List banner images - only list owner can write
    match /lists/{listId}/banner/{fileName} {
      allow read: if true;
      allow write: if request.auth != null
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }

    // Club images - only club owner can write
    match /clubs/{clubId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }

    // Book cover cache (from API lookups)
    match /books/{isbn}/{fileName} {
      allow read: if true;
      allow write: if false; // Only Cloud Functions
    }

    // Book covers uploaded from app (cached from external APIs)
    match /book_covers/{fileName} {
      allow read: if true;
      allow write: if request.auth != null
                   && request.resource.size < 5 * 1024 * 1024  // Max 5MB
                   && request.resource.contentType.matches('image/.*');
    }
  }
}
